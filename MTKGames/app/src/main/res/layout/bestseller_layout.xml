<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    >

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="140dp"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagen_juego"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/angry"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/nombre_juego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagen_juego"
                android:layout_marginStart="10dp"
                android:text="@string/defecto"
                />

            <TextView
                android:id="@+id/precio_juego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombre_juego"
                android:layout_toStartOf="@id/diamante"
                android:text="@string/defecto"
                />

            <ImageView
                android:id="@+id/diamante"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_below="@id/nombre_juego"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/diamante"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>